#cloud-config
hostname: {{ vm_name }}
manage_etc_hosts: true

users:
  - name: admin
    sudo: ALL=(ALL) NOPASSWD:ALL
    shell: /bin/bash
    passwd: "{{ 'admin' | password_hash('sha512') }}"
    lock_passwd: false 

package_update: true
packages:
  - qemu-guest-agent

runcmd:
  - systemctl enable --now qemu-guest-agent
