#cloud-config
hostname: {{ vm_name }}
manage_etc_hosts: true

users:
  - name: ansible
    sudo: ALL=(ALL) NOPASSWD:ALL
    groups: sudo
    shell: /bin/bash
    
chpasswd:
  list: |
    ansible:ansible
  expire: False

ssh_pwauth: True

package_update: true
packages:
  - qemu-guest-agent

runcmd:
  - systemctl enable --now qemu-guest-agent
